<footer class="main-footer d-flex justify-content-between align-items-center">
  <div class="footer-nav">

  <!-- TablesController -->
  <% if controller_name == "tables" %>

    <%= link_to tables_path, class: "btn btn-warning" do %>
      <%= image_tag("dining-table.svg") %>
    <% end %>

    <%= link_to kitchens_path, class: "btn btn-primary"  do %>
      <%= image_tag "chef-bw.svg", style: "width:4vh" %>
    <% end %>

  <!-- KitchensController -->
  <% elsif controller_name == "kitchens" %>

    <%= link_to tables_path, class: "btn btn-warning" do %>
      <%= image_tag "dining-table-bw.svg", style: "width:4vh" %>
    <% end %>

    <%= link_to kitchens_path, class: "btn btn-primary"  do %>
      <%= image_tag("chef.svg") %>
    <% end %>

  <!-- DishesController -->
  <% elsif controller_name == "dishes" %>
    <script>
      document.querySelector("footer").remove()
    </script>
  <% end %>

  </div>
</footer>