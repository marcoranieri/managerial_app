<%= link_to "Tables", tables_path, class: "btn btn-warning"  %>
<%= link_to "Kitchens", kitchens_path, class: "btn btn-primary"  %>

<hr>

<div style="display:flex;justify-content:space-between;align-items:center;">
  <h1>Table <%= @table.table_number %></h1>

  <h4>
    <i class="fas fa-users"></i> <%= @table.pax %>
  </h4>

  <h4>
    Tot: £<%= @table.total_amount_cents.nil? ? 0 : @table.total_amount_cents %>
  </h4>

  <%= link_to "<i class='fas fa-pencil-alt'></i>".html_safe, edit_table_path(@table), class: "btn btn-outline-warning" %>
</div>

<hr>

<ul>
  <% @table.dishes.each do |dish| %>
    <li>
      <%= dish.name %> - £<%= dish.price_cents %>
    </li>
  <% end %>
</ul>

<hr>

<div class="d-flex justify-content-around">
  <div>
    <h4>Add Dish:</h4>
    <%= simple_form_for [@table, Order.new] do |f| %>
      <%= f.association :dish, as: :radio_buttons %>
      <%#= f.input :price_cents %>
      <%= f.submit %>
    <% end %>
  </div>

  <ul id="show-table-<%= @table.id %>" style="padding:20px 40px;border: 2px solid lightblue">
    <% @table.dishes.each do |dish| %>
      <li>
        <%= dish.name %>
      </li>
    <% end %>
  </ul>
</div>