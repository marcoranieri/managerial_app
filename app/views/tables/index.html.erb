<div class="row">
  <% @tables.each do |table| %>

    <div class="col-sm-6 col-lg-4" style="border: 2px solid orange; padding:40px 20px;border-radius: 5px;">

      <div>
        <% if table&.pax.zero? %>

          <%= link_to edit_table_path(table), class: 'table-link' do %>
            <%= table.table_number %>
            <%= image_tag("dining-table.svg") %>
          <% end %>

        <% else %>

          <%= link_to table, class: 'table-link' do %>
            <%= table.table_number %>
            <%= image_tag("dining-table.svg") %>
          <% end %>

        <% end %>
      </div>

      <div id="table-<%= table&.id %>" class="row">
        <%= render table.dishes if table %>
      </div>

    </div>

  <% end %>
</div>
