<h1><i class="fas fa-utensils"></i> Kitchens</h1>

<div class="kitchen-index--js" style="display:flex;justify-content:space-between;">
  <% @tables.each do |table| %>

    <div class="kitchen--js" data-table-id="<%= table.id %>" style="border: 3px solid lightblue; padding:40px 20px; width:200px;border-radius: 5px;">
      <div style="margin-top: -25px;" class="btn btn-outline-primary">
        <%= link_to table  do %>
          Table <%= table.table_number %>
        <% end %>
      </div>

      <ul id="table-<%= table.id %>" class="row">
        <%= render table.dishes %>
      </ul>


      <% if table.notes.present? %>
        <hr>
        <p style="opacity: .6;"><small><%= table.notes %></small></p>
      <% end %>

    </div>

  <% end %>
</div>

<hr>

<%= link_to "TABLES", tables_path, class: "btn btn-outline-warning" %>
